<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.jinzht.pro"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/main_margin"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:background="@color/white"
            android:layout_height="wrap_content">
        <LinearLayout
                style="@style/width_match"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="@dimen/project_iv_width"
                    android:layout_margin="0.5dp"
                    android:id="@+id/company_icon"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:background="@drawable/invest_item_square"
                    android:gravity="center_vertical"
                    android:layout_height="110dp">

                <TextView
                        style="@style/person_invest_item_12_black_tv"
                        android:id="@+id/name"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="7dp"/>
                <TextView
                        style="@style/person_invest_item_12_black_tv"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/company_name"
                        android:layout_marginRight="10dp"/>
                <TextView
                        style="@style/person_invest_item_12_black_tv"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/project_summary"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>