<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.jinzht.pro"
              xmlns:custom="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginRight="@dimen/home_margin"
        android:layout_marginBottom="15dp"
        android:background="@drawable/item_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="@dimen/home_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="绿点科技有限公司"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="所属行业："
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/login_btn"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="互联网"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="预路演时间："
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/login_btn"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="2015年5月17日"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="@dimen/home_margin"
            android:text="报名倒计时"
            android:layout_height="wrap_content"/>
        <com.jinzht.pro.numberprogressbar.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:id="@+id/numberPro"
            style="@style/NumberProgressBar_Funny_Orange"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="50万"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textColor="#727272"
                    android:singleLine="true"
                    android:text="已获融资"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="融资中"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#727272"
                    android:singleLine="true"
                    android:text="融资状态"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="150万"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:textColor="#727272"
                    android:text="预融资总额"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:background="#e3e3e3"
                android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:gravity="center_vertical"
            android:layout_height="@dimen/title_height">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:drawablePadding="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="44"
                android:textSize="14dp"
                android:drawableLeft="@drawable/collection"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingRight="8dp"
                android:drawablePadding="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="44"
                android:textSize="14dp"
                android:drawableLeft="@drawable/love"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="90dp"
                android:id="@+id/complete_btn"
                android:background="@drawable/road_btn"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/want_invest"
                android:layout_height="35dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>