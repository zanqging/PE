<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/body_bg"
              android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <com.jinzht.pro.swipyrefreshlayout.SwipyRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipyrefreshlayout"
        android:layout_marginTop="@dimen/home_margin"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginRight="@dimen/home_margin"
        app:direction="both"
        android:layout_height="wrap_content">
        <com.jinzht.pro.view.MyGridview
            android:layout_width="match_parent"
            android:numColumns="2"
            android:verticalSpacing="@dimen/home_margin"
            android:horizontalSpacing="5dp"
            android:id="@+id/list_myinvest"
            android:layout_height="wrap_content">

        </com.jinzht.pro.view.MyGridview>
    </com.jinzht.pro.swipyrefreshlayout.SwipyRefreshLayout>

</LinearLayout>