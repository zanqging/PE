<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="false"
              android:background="@color/body_bg"
              android:layout_height="match_parent">
    <include layout="@layout/title_project_details"/>
    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/sign_bg"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/sign_wave"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sign_wave"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/normal_margin"
                        android:paddingRight="@dimen/normal_margin"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/sign_time_bg"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/login_btn"
                            android:id="@+id/time_title"
                            android:text="2015年8月6日星期四"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/login_btn"
                            android:id="@+id/time_context"
                            android:textSize="26sp"
                            android:text="15:15:15"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_marginTop="30dp"
                            android:layout_marginBottom="@dimen/normal_margin"
                          android:layout_height="@dimen/title_height">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/aim_postion"
                        android:gravity="center_vertical"
                        android:hint="@string/aim_hint"
                        android:paddingLeft="@dimen/home_margin"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:background="@drawable/sign_in_edit_bg"
                        android:layout_height="45dp"/>
                <TextView
                        android:layout_width="80dp"
                        android:text="@string/aim_postion"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/sign_btn"
                        android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/normal_margin"
                            android:layout_height="@dimen/title_height">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/your_position"
                        android:paddingLeft="90dp"
                        android:gravity="center_vertical"
                        android:hint="@string/your_position_hint"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:background="@drawable/sign_in_edit_bg"
                        android:layout_height="45dp"/>
                <TextView
                        android:layout_width="80dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:gravity="center"
                        android:text="@string/your_position"
                        android:textColor="@color/white"
                        android:background="@drawable/sign_left"
                        android:layout_height="match_parent"/>
                <RelativeLayout android:layout_width="@dimen/title_height"
                                android:layout_marginRight="@dimen/normal_margin"
                                android:id="@+id/get_loaction"
                                android:layout_alignParentRight="true"
                                android:layout_height="@dimen/title_height">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/dingwei1"
                            android:scaleType="center"
                            android:id="@+id/iv_loaction"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/home_margin"
                            android:layout_height="@dimen/title_height">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:id="@+id/sign_status"
                        android:paddingLeft="90dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:background="@drawable/sign_in_edit_bg"
                        android:layout_height="45dp"/>
                <TextView
                        android:layout_width="80dp"
                        android:text="@string/sign"
                        android:id="@+id/sign_in_btn"
                        android:textSize="18sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/sign_btn"
                        android:layout_height="match_parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray1"
                        android:layout_height="match_parent"/>
            </RelativeLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="80dp">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/distance"
                                android:textSize="36sp"
                                android:text="00米"
                                android:textStyle="bold"
                                android:textColor="@color/login_btn"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/sum_position"
                                android:textSize="16sp"
                                android:textColor="@color/login_btn"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                            android:layout_width="1dp"
                            android:background="@color/login_btn"
                            android:layout_height="match_parent"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                        <com.jinzht.pro.view.RushBuyCountDownTimerView
                            android:id="@+id/timerView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </com.jinzht.pro.view.RushBuyCountDownTimerView>
                        <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/distance_time"
                                android:textSize="16sp"
                                android:textColor="@color/login_btn"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>