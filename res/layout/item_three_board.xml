<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/main_black"
                    android:id="@+id/title"
                    android:maxLines="2"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/resource"
                        android:textColor="@color/login_btn"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/create_time"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray1"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/context"
                    android:textColor="@color/main_black"
                    android:singleLine="true"
                    android:lineSpacingExtra="2dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:layout_width="95dp"
                android:id="@+id/company_icon"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_height="95dp"/>
    </LinearLayout>
    <include layout="@layout/layout_underline"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="40dp">

        <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/collect"
                android:textSize="14sp"
                android:id="@+id/tv_collect"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColor="@color/gray1"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/love"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:id="@+id/tv_love"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColor="@color/gray1"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <include layout="@layout/layout_no_margin"/>
    <View
            android:layout_width="match_parent"
            android:background="@color/body_bg"
            android:layout_height="@dimen/home_margin"/>
</LinearLayout>