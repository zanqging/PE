<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="300dp"
            android:layout_marginTop="55dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_bg"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:padding="10dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/gray1"
                android:layout_marginBottom="10dp"
                android:text="@string/no_authertition"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:background="@color/new_back1dp"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/title_height">
            <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/go_authertition"
                    android:textSize="18sp"
                    android:text="@string/go_authertition"
                    android:textColor="@color/login_btn"
                    android:layout_height="@dimen/title_height"/>
            <View
                    android:layout_width="1dp"
                    android:background="@color/new_back1dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/later"
                    android:textSize="18sp"
                    android:text="@string/later"
                    android:textColor="@color/login_btn"
                    android:layout_height="@dimen/title_height"/>
        </LinearLayout>


    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/dialog_logo"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
</RelativeLayout>