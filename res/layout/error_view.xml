<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.jinzht.pro"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            style="@style/both_wrap">

        <ImageView
                android:src="@drawable/error_pages"
                android:scaleType="fitXY"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                style="@style/both_wrap"/>
        <Button
                android:id="@+id/retry"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="90dp"
                android:layout_marginTop="@dimen/home_margin"
                android:layout_height="35dp"
                android:background="@drawable/error_btn_bg"
                android:textColor="@color/login_btn"
                android:text="重新加载" />
    </LinearLayout>

</FrameLayout>