<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/body_bg"
              android:fitsSystemWindows="true"
              android:clipToPadding="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/title_bg"
            android:focusable="true"
            android:gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:layout_height="@dimen/title_height">
            <RelativeLayout
                android:layout_width="@dimen/title_height"
                android:id="@+id/search_back"
                android:layout_height="@dimen/title_height">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/back"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        <EditText
                android:layout_width="0dp"
                android:textColor="@color/gray1"
                android:layout_weight="1"
                android:background="@drawable/search_bg"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/home_margin"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/search"
                android:paddingLeft="12dp"
                android:id="@+id/search_edit"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:singleLine="true"
                android:textColorHint="@color/gray1"
                android:layout_height="30dp"/>
        <TextView
                android:layout_width="60dp"
                android:textSize="14sp"
                android:id="@+id/search_btn"
                android:textColor="@color/white"
                android:text="@string/search"
                android:layout_marginRight="@dimen/normal_margin"
                android:gravity="center"
                android:background="@drawable/search_edit_bg"
                android:layout_height="30dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="@string/search_keyword"
            android:textColor="@color/gray1"
            android:textSize="14sp"
            android:layout_height="43dp"/>
    <include layout="@layout/layout_underline"/>
    <!--<com.jinzht.pro.jazzylistview.JazzyGridView android:layout_width="match_parent"-->
                                                <!--android:numColumns="3"-->
                                                <!--android:id="@+id/jazzyGridView"-->
                                                <!--android:horizontalSpacing="@dimen/normal_margin"-->
                                                <!--android:layout_height="wrap_content">-->

    <!--</com.jinzht.pro.jazzylistview.JazzyGridView>-->
    <GridView
            android:layout_width="match_parent"
            android:id="@+id/jazzyGridView"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:scrollbars="none"
            android:verticalSpacing="11dp"
            android:layoutAnimation="@anim/list_gridview"
            android:numColumns="3"
            android:horizontalSpacing="13dp"
            android:layout_height="match_parent">

    </GridView>
</LinearLayout>