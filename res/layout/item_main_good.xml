<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/both_match"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants">
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            style="@style/width_match">
        <ImageView
                android:layout_width="@dimen/project_iv_width"
                android:layout_margin="5dp"
                android:id="@+id/result_iamge"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="9dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
            <TextView
                    style="@style/invest_list_tv_title"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/tv_company"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="9dp"
                    android:background="@color/vertical_1dp"
                    android:layout_height="1dp"/>

            <TextView
                    style="@style/invest_list_tv_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/has_monty_home"
                    android:id="@+id/tv_money"/>

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/road_time"
                    style="@style/invest_list_tv_content"/>
            <TextView
                    style="@style/invest_list_tv_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="3dp"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/invest_finish"
                    android:id="@+id/tv_invest_status"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_no_margin"/>
</LinearLayout>