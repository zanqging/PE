<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:fitsSystemWindows="true"
              android:background="@drawable/login_bg"
              android:clipToPadding="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/back"
            android:gravity="center"
            android:layout_height="@dimen/title_height">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
            android:fadingEdge="none"
            style="@style/both_match">
        <LinearLayout
                android:orientation="vertical"
                style="@style/both_match">
            <LinearLayout
                    android:orientation="vertical"
                    style="@style/width_match" android:layout_weight="1">

                <com.jinzht.pro.mycircleimage.PolygonImageView
                        android:layout_width="95dp"
                        android:id="@+id/user_iamge"
                        app:poly_border="true"
                        android:layout_margin="@dimen/home_margin"
                        android:layout_gravity="center"
                        app:poly_border_color="#e2e2e1"
                        app:poly_vertices="0"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="5"
                        app:poly_rotation_angle="25"
                        android:layout_height="95dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="@drawable/trans_circle_ed_bg"
                              android:layout_margin="@dimen/home_margin"
                              android:layout_height="@dimen/title_height">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:src="@drawable/register_moblie"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="47dp">
                            <TextView
                                    android:layout_width="60dp"
                                    android:text="@string/teleph"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_height="match_parent"/>
                            <EditText
                                    android:layout_width="match_parent"
                                    android:id="@+id/telephone"
                                    android:inputType="phone"
                                    android:maxLength="11"
                                    style="@style/MyWidget.InformationEdit"
                                    android:hint="@string/telephone_hint"
                                    android:layout_height="match_parent" />
                        </LinearLayout>
                        <include layout="@layout/layout_no_margin"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="@drawable/trans_circle_ed_bg"
                              android:layout_marginLeft="@dimen/home_margin"
                              android:layout_marginRight="@dimen/home_margin"
                              android:layout_height="@dimen/title_height">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:src="@drawable/register_passwd"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="47dp">
                            <TextView
                                    android:layout_width="60dp"
                                    android:text="@string/codes"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_height="match_parent"/>
                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:id="@+id/codes"
                                    android:inputType="number"
                                    style="@style/MyWidget.InformationEdit"
                                    android:hint="@string/code_hint"
                                    android:layout_height="match_parent" />

                            <Button
                                    android:layout_width="wrap_content"
                                    android:background="@drawable/login_btn"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/codes_btn"
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center"
                                    android:paddingRight="5dp"
                                    android:textColor="@drawable/login_color"
                                    android:layout_marginRight="@dimen/normal_margin"
                                    android:text="@string/getcode"
                                    android:gravity="center"
                                    android:layout_height="30dp" />
                        </LinearLayout>
                        <include layout="@layout/layout_no_margin"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="@drawable/trans_circle_ed_bg"
                              android:layout_margin="@dimen/home_margin"
                              android:id="@+id/ll_one"
                              android:layout_height="@dimen/title_height">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:src="@drawable/register_passwd"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="47dp">
                            <TextView
                                    android:layout_width="60dp"
                                    android:text="@string/first_passwd"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_height="match_parent"/>
                            <EditText
                                    android:layout_width="match_parent"
                                    android:id="@+id/first_passwd"
                                    android:inputType="textPassword"
                                    style="@style/MyWidget.InformationEdit"
                                    android:hint="@string/login_passwd_hint"
                                    android:layout_height="match_parent" />
                        </LinearLayout>
                        <include layout="@layout/layout_no_margin"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:id="@+id/ll_two"
                              android:background="@drawable/trans_circle_ed_bg"
                              android:layout_marginLeft="@dimen/home_margin"
                              android:layout_marginRight="@dimen/home_margin"
                              android:layout_height="@dimen/title_height">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:src="@drawable/register_moblie"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_height="47dp">
                        <TextView
                                android:layout_width="60dp"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:text="@string/teleph"
                                android:visibility="invisible"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="match_parent"/>
                        <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/second_passwd"
                                android:inputType="textPassword"
                                style="@style/MyWidget.InformationEdit"
                                android:hint="@string/login_second_passwd_hint"
                                android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/home_margin"
                    android:text="@string/wechat_login"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/ok_normal_btn"
                    android:layout_height="40dp" android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>