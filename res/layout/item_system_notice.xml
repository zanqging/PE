<?xml version="1.0" encoding="utf-8"?>
<com.jinzht.pro.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:orientation="vertical"
                                  android:background="@color/body_bg"
                                  xmlns:swipe="http://schemas.android.com/apk/res-auto"
                                  android:id="@+id/swipe"
                                  android:descendantFocusability="blocksDescendants"
                                  android:layout_width="match_parent"
                                  swipe:leftEdgeSwipeOffset="0dp"
                                  swipe:rightEdgeSwipeOffset="0dp"
                                  android:layout_height="wrap_content"
                                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:tag="Bottom2"
            android:id="@+id/swipe_menu"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:focusable="false"
            android:background="@color/body_bg"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
        <RelativeLayout
                android:layout_width="120dp"
                android:id="@+id/delete"
                android:layout_marginLeft="@dimen/home_margin"
                android:background="@color/body_bg"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/item_detele"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="@color/login_btn"
                    android:text="@string/delete"
                    android:drawablePadding="4dp"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:background="@color/white"
            android:layout_height="110dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/home_margin"
                android:layout_marginLeft="@dimen/home_margin"
                android:textSize="18sp"
                android:id="@+id/title"
                android:textColor="@color/login_btn"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/time"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/home_margin"
                android:textColor="@color/gray1"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/content"
                android:layout_marginLeft="@dimen/home_margin"
                android:lineSpacingMultiplier="1.2"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="@dimen/home_margin"
                android:maxLines="2"
                android:layout_height="match_parent"/>
        <View android:layout_width="match_parent"
              android:layout_height="10dp"
              android:background="@color/body_bg"/>
    </LinearLayout>


</com.jinzht.pro.swipe.SwipeLayout>