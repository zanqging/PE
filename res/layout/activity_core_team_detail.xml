<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="false"
              android:layout_height="match_parent">
    <include layout="@layout/title_project_details"/>
    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/blur_image"
                        android:scaleType="fitXY"
                        android:src="@drawable/core_team_detail"
                        android:layout_height="170dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/blur_image"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:textColor="@color/login_btn"
                            android:layout_marginRight="137dp"
                            android:id="@+id/name"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:layout_height="wrap_content"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:gravity="left"
                                  android:layout_marginRight="137dp"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="match_parent"
                                android:textSize="18sp"
                                android:id="@+id/position"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:gravity="right"
                                android:layout_height="wrap_content"/>
                        <Button
                                android:layout_width="wrap_content"
                                android:background="@drawable/main_yellow_btn"
                                android:text="@string/add_people"
                                android:layout_marginLeft="@dimen/home_margin"
                                android:visibility="gone"
                                android:textSize="14sp"
                                android:textColor="@color/main_yellow"
                                android:layout_height="30dp"/>
                    </LinearLayout>
                    <TextView
                            android:layout_width="match_parent"
                            android:lineSpacingMultiplier="1.3"
                            android:lineSpacingExtra="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:textSize="15sp"
                            android:id="@+id/core_team_detail"
                            android:textColor="@color/main_black"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.jinzht.pro.mycircleimage.PolygonImageView
                        android:layout_width="90dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:id="@+id/image"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="125dp"
                        app:poly_border="true"
                        app:poly_border_color="@color/main_gray"
                        app:poly_vertices="0"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="5"
                        app:poly_rotation_angle="25"
                        android:layout_height="90dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>