<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">
        <!--<com.jinzht.pro.materialcalendarview.MaterialCalendarView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:id="@+id/materialCalendarView"
                android:layout_height="wrap_content">

        </com.jinzht.pro.materialcalendarview.MaterialCalendarView>-->
    <LinearLayout
            android:id="@+id/ll_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffeeeeee"
            android:orientation="vertical" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >


            <TextView
                    android:id="@+id/popupwindow_calendar_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#aa564b4b"
                    android:textSize="18sp" />

        </RelativeLayout>

        <com.jinzht.pro.calendarwidget.KCalendar
                android:id="@+id/popupwindow_calendar"
                android:layout_width="match_parent"
                android:layout_height="320dp" >
        </com.jinzht.pro.calendarwidget.KCalendar>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbcc3333" />

    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/dialog_ok"
            android:textColor="@color/login_btn"
            android:text="@string/sign_in"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="@dimen/title_height"/>
</LinearLayout>