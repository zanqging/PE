<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:material="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@drawable/item_bg"
              android:layout_height="match_parent">
    <com.jinzht.pro.edittext.MaterialEditText
            android:layout_width="match_parent"
            android:id="@+id/publish_edit"
            android:hint="@string/want_reply"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            material:floatingLabel="true"
            style="@style/MyWidget.PostCommentEdit"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/login_btn"
            android:layout_height="wrap_content" />
    <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:text="@string/replay"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/home_margin"
            android:background="@drawable/ok_normal_btn"
            android:id="@+id/reply_btn"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="@dimen/title_height"/>
</LinearLayout>