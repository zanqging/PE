<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:clipToPadding="false"
              android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_dot"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="30dp">
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/dot_first"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_select"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/dot_second"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_normal"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/dot_three"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_normal"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/dot_four"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_normal"
                android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/dot_five"
            android:src="@drawable/dot_normal"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:id="@+id/experience_btn"
            android:textColor="@color/login_btn"
            android:visibility="gone"
            android:textSize="20dp"
            android:background="@drawable/right_now"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:layout_height="wrap_content"/>
</RelativeLayout>