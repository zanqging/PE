<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.jinzht.pro"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include layout="@layout/title_project_details"/>
    <RelativeLayout
            android:layout_width="60dp"
            android:id="@+id/rl_share"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/title_height">
        <ImageView
                android:src="@drawable/detail_share"
                android:layout_centerInParent="true"
                style="@style/both_wrap"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="250dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ma_logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_er"
            android:layout_gravity="center_horizontal"
            android:layout_height="250dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/iv_er"
            android:id="@+id/tv_jzht"
            android:layout_centerHorizontal="true"
            android:textColor="@color/login_btn"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_margin"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray1"
            android:layout_below="@id/tv_jzht"
            android:textSize="18sp"
            android:id="@+id/verson_name"
            android:text="@string/verson_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_margin"
            android:layout_height="wrap_content"/>
</RelativeLayout>