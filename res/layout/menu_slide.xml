<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/login_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/up"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/to_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_image" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="115dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/user_name"
                        android:text="@string/update_information"
                        android:textColor="@color/white" />

                    <include layout="@layout/layout_no_margin" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/up"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/about_me"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/about" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/mine_relation" />

                        <TextView
                            android:id="@+id/about_cricle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/orange_circle"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <include layout="@layout/layout_no_margin" />

                    <LinearLayout
                        android:id="@+id/my_account"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/icon_account1" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/account" />
                    </LinearLayout>

                    <include layout="@layout/layout_no_margin" />

                    <LinearLayout
                        android:id="@+id/my_collection"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/collecting" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/collecting" />
                    </LinearLayout>

                    <include layout="@layout/layout_no_margin" />

                    <LinearLayout
                        android:id="@+id/my_invest_finacing"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/my_invest" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/my_invest_finacing" />

                    </LinearLayout>

                    <include layout="@layout/layout_no_margin" />

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/share" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/share" />


                    </LinearLayout>

                    <include layout="@layout/layout_no_margin" />

                    <LinearLayout
                        android:id="@+id/about_us"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:scaleType="center"
                            android:src="@drawable/replay" />

                        <TextView
                            style="@style/MyWidget.RoadText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/title_height"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="9dp"
                            android:text="@string/about" />


                    </LinearLayout>

                </LinearLayout>

                <com.jinzht.pro.mycircleimage.PolygonImageView
                    android:id="@+id/user_iamge"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    app:poly_border="true"
                    app:poly_border_color="#e2e2e1"
                    app:poly_border_width="5dp"
                    app:poly_corner_radius="5"
                    app:poly_rotation_angle="25"
                    app:poly_vertices="0" />

                <!--app:poly_shadow="true"-->
                <!--app:poly_shadow_color="@color/black"&lt;!&ndash;&ndash;&gt;-->
                <RelativeLayout
                    android:id="@+id/setting"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/title_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/setting" />
                </RelativeLayout>
                <!--  app:poly_shadow="true"
                  app:poly_shadow_color="@color/black"
                  app:poly_border="true"
                  app:poly_border_color="@color/login_btn"
                  app:poly_vertices="0"
                  app:poly_border_width="5dp"
                  app:poly_corner_radius="5"
                  app:poly_rotation_angle="25"-->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>