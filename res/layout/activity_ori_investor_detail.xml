<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:clipToPadding="false"
              android:layout_height="match_parent">
    <include layout="@layout/title_project_details"/>
    <com.jinzht.pro.view.MultiStateView style="@style/both_match"
                                        android:id="@+id/multiStateView"
                                        app:msv_errorView="@layout/error_view"
                                        app:msv_emptyView="@layout/empty_view"
                                        app:msv_loadingView="@layout/loading_view"
                                        app:msv_viewState="content">
        <ScrollView
                style="@style/scrollview_style">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <LinearLayout
                        style="@style/width_match"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/home_margin"
                        android:background="@drawable/item_bg"
                        android:gravity="center_vertical">
                    <ImageView
                            android:layout_width="72dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitXY"
                            android:layout_height="50dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/iv_logo"
                           />
                    <View
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:background="@color/vertical_1dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="1dp"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_ori_names"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            style="@style/Detail_tv_content"/>

                    <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_ori_time"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            style="@style/Detail_tv_content"/>
                    <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_ori_adress"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            style="@style/Detail_tv_content"/>

                    <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_ori_http"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            style="@style/Detail_tv_content"/>
                </LinearLayout>
                <LinearLayout
                        style="@style/width_match"
                        android:layout_margin="@dimen/home_margin"
                        android:id="@+id/ll_person_send_word"
                        android:orientation="vertical"
                        android:background="@drawable/item_bg"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/normal_margin"
                        android:paddingTop="@dimen/normal_margin">
                    <TextView
                            android:text="@string/or_profile"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:drawableLeft="@drawable/self_profile"
                            android:drawablePadding="3dp"
                            style="@style/Detail_tv_title"/>
                    <include layout="@layout/layout_underline2"/>

                    <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_one"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            style="@style/Detail_tv_content"/>

                </LinearLayout>
                <LinearLayout
                        style="@style/width_match"
                        android:orientation="vertical"
                        android:id="@+id/ll_person_case"
                        android:layout_marginBottom="@dimen/home_margin"
                        android:layout_marginLeft="@dimen/home_margin"
                        android:layout_marginRight="@dimen/home_margin"
                        android:background="@drawable/item_bg"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="@dimen/normal_margin">
                    <TextView
                            android:text="@string/invest_case"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:drawableLeft="@drawable/person_invest_case"
                            android:drawablePadding="3dp"
                            style="@style/Detail_tv_title"/>
                    <include layout="@layout/layout_underline2"/>
                    <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_three"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            style="@style/Detail_tv_content"/>
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/id_recyclerview"
                            android:divider="#ffff0000"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="@dimen/home_margin"
                            android:layout_marginRight="@dimen/home_margin"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="120dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.jinzht.pro.view.MultiStateView>
</LinearLayout>