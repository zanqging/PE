<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <com.jinzht.pro.view.MyListview android:layout_width="match_parent"
                                            android:id="@+id/list"
                                            android:layout_marginTop="@dimen/home_margin"
                                            android:divider="@null"
                                            android:layout_height="wrap_content">

            </com.jinzht.pro.view.MyListview>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/item_bg"
                    android:id="@+id/add_new_authentication"
                    android:layout_marginRight="@dimen/home_margin"
                    android:layout_marginBottom="@dimen/home_margin"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/home_margin"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:drawableLeft="@drawable/add_authentication"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:id="@+id/add_new_btn"
                        android:textColor="@color/gray1"
                        android:text="@string/add_new_authentication"
                        android:layout_height="60dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>