<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/login_bg"
              android:fitsSystemWindows="true"
              android:clipToPadding="false"
              android:layout_width="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              tools:context="com.example.pro.RegisterActivity"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/back"
            android:gravity="center"
            android:layout_height="@dimen/title_height">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <include layout="@layout/layout_no_margin"/>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:background="@drawable/trans_circle_ed_bg"
                          android:layout_margin="@dimen/home_margin"
                          android:layout_height="@dimen/title_height">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:src="@drawable/register_moblie"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="47dp">
                        <TextView
                                android:layout_width="60dp"
                                android:text="@string/teleph"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="match_parent"/>
                        <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/telephone"
                                android:inputType="phone"
                                android:maxLength="11"
                                style="@style/MyWidget.InformationEdit"
                                android:hint="@string/telephone_hint"
                                android:layout_height="match_parent"/>
                    </LinearLayout>
                    <include layout="@layout/layout_no_margin"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:background="@drawable/trans_circle_ed_bg"
                          android:layout_marginLeft="@dimen/home_margin"
                          android:layout_marginRight="@dimen/home_margin"
                          android:layout_height="@dimen/title_height">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:src="@drawable/register_passwd"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="47dp">
                        <TextView
                                android:layout_width="60dp"
                                android:text="@string/codes"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="match_parent"/>
                        <EditText
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/codes"
                                android:inputType="number"
                                style="@style/MyWidget.InformationEdit"
                                android:hint="@string/code_hint"
                                android:layout_height="match_parent"/>

                        <Button
                                android:layout_width="wrap_content"
                                android:background="@drawable/login_btn"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/codes_btn"
                                android:paddingLeft="5dp"
                                android:layout_gravity="center"
                                android:paddingRight="5dp"
                                android:textColor="@drawable/login_color"
                                android:layout_marginRight="@dimen/normal_margin"
                                android:text="@string/getcode"
                                android:gravity="center"
                                android:layout_height="30dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_no_margin"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:background="@drawable/trans_circle_ed_bg"
                          android:layout_margin="@dimen/home_margin"
                          android:layout_height="@dimen/title_height">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:src="@drawable/register_passwd"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="47dp">
                        <TextView
                                android:layout_width="60dp"
                                android:text="@string/first_passwd"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="match_parent"/>
                        <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/first_passwd"
                                android:inputType="textPassword"
                                style="@style/MyWidget.InformationEdit"
                                android:hint="@string/login_passwd_hint"
                                android:layout_height="match_parent"/>
                    </LinearLayout>
                    <include layout="@layout/layout_no_margin"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:background="@drawable/trans_circle_ed_bg"
                          android:layout_marginLeft="@dimen/home_margin"
                          android:layout_marginRight="@dimen/home_margin"
                          android:layout_height="@dimen/title_height">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:src="@drawable/register_moblie"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="47dp">
                    <TextView
                            android:layout_width="60dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:text="@string/teleph"
                            android:visibility="invisible"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_height="match_parent"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/second_passwd"
                            android:inputType="textPassword"
                            style="@style/MyWidget.InformationEdit"
                            android:hint="@string/login_second_passwd_hint"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/home_margin"
                    android:textSize="20dp"
                    android:id="@+id/register"
                    android:text="@string/get_passwd"
                    android:textColor="@color/white"
                    android:background="@drawable/ok_normal_btn"
                    android:layout_marginTop="20dp"
                    android:layout_height="@dimen/title_height"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>