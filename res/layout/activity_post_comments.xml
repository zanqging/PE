<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="false"
                xmlns:material="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent">
    <include layout="@layout/title_project_details"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/home_margin"
            android:layout_height="wrap_content">

        <com.jinzht.pro.edittext.MaterialEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/publish_edit"
                android:hint="@string/please_input_comments"
                android:gravity="center_vertical"
                material:floatingLabel="true"
                style="@style/MyWidget.PostCommentEdit"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/login_btn"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_width="55dp"
                android:text="@string/publish_hint_btn"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:id="@+id/publish_btn"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_cricle_btn"
                android:layout_height="23dp"/>
    </LinearLayout>
</LinearLayout>